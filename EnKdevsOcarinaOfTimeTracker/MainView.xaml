             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnKdevsOcarinaOfTimeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400" FontFamily="FOT-Chiaro Std B" Foreground="White">
